CC = gcc
SRC = main.c holberton.c
OBJ = $(SRC:.c=.o)
NAME = holberton
RM = holberton.o main.o

all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)
clean:
	rm -f *~ $(NAME)
oclean:
	rm -f $(RM)
fclean:
	rm -f *~ $(NAME)
	rm -f $(RM)
re:
	rm -f $(RM)
	$(CC) -c -o main.o main.c
	$(CC) -c -o holberton.o holberton.c
	$(CC) $(OBJ) -o $(NAME)
